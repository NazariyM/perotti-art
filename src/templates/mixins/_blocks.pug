mixin btn(classMod, text, popup)
	+b.BUTTON.btn(class= classMod data-popup-target= popup)&attributes(attributes)= text

mixin sectTitle(text, classMod)
	+b.section-title.section-title(class= classMod || '')
		+e.H2.text: span= text

mixin checkBox(classMod, text, radio)
	+b.check-box(class= classMod)
		+e.LABEL.label
			if radio
				+e.INPUT.input(type='radio' name='radio')&attributes(attributes)
			else
				+e.INPUT.input(type='checkbox' name='')&attributes(attributes)
			+e.square: +i('check', 'check-box__icon')
			+e.SPAN.text= text

mixin formField(classMod, text, textarea)
	+b.form-field(class= classMod)
		if !textarea
			+e.INPUT.input(type='text')&attributes(attributes)
		else
			+e.TEXTAREA.textarea.textarea(placeholder=`${text}`)
		+e.LABEL.label= text
